sources = $(wildcard [a-z]*.sc)
pages = $(sources:.sc=.html)
shellcat = $(shell which shell || echo ../shellcat)

.PHONY: all
all: $(pages)

../shellcat:
	$(MAKE) -C ..

%.html: %.sc $(shellcat)
	$(shellcat) _template.sc $(<) > $(@).tmp
	mv $(@).tmp $(@)

.PHONY: clean
clean:
	rm -f *.html *.tmp

.error = GNU make is required

# vim:ts=4 sts=4 sw=4 noet
