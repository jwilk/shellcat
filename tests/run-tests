set -e -u

if [ -z "${*##-*}" ]
then
    printf 'Usage: %s <shellcat-executable> [extra-args...]\n' "$0"
    exit 1
fi

ifs=$IFS
IFS='
'
export shellcat="$*"
export shellcat_ifs="$IFS"
IFS=$ifs

hr()
{
    printf '%60s' | tr ' ' "$1"
    printf '\n'
}

n_ok=0
n_fail=0
for file in test-*.t
do
    test="${file%.t}"
    printf '%s ... ' "$test"
    rm -f "${test}.report"
    if ( "./$file" 2>&1 ) > "${test}.report"
    then
        rm -f "${test}.report"
        printf 'ok\n'
        n_ok=$(($n_ok + 1))
    else
        printf 'FAIL\n'
        n_fail=$(($n_fail + 1))
    fi
done

printf '\n'

for file in test-*.t
do
    test="${file%.t}"
    [ -e "${test}.report" ] || continue
    hr '='
    printf 'FAILED: %s\n' "$test"
    hr '-'
    cat "${test}.report"
    hr '='
    printf '\n'
done

if [ $n_fail -gt 0 ]
then
    printf 'FAILED (failures=%d)\n' $n_fail
    exit 1
else
    printf 'OK\n'
    exit 0
fi

# vim:ts=4 sts=4 sw=4 et
